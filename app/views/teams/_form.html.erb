<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <!-- <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2> -->
      <%= t "globals.forms.messages.errors.multi errors", count: team.errors.count %>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('ُTeam.index.name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('Team.index.describtion'), style: "display: block" %>
    <%= form.text_field :describtion %>
  </div>

  <div>
    <%= form.label t('Team.index.members'), style: "display: block" %>
    <% all_emp = Employee.all %>
    <%= form.select :members, options_for_select(all_emp.map{|u| [u.name, u.id]}, @team.employee_id) %>
  </div>


  <div>
    <%= form.label t 'Team.index.leader', style: "display: block" %>
    <%= form.select :employee_id, options_for_select(@employees.map{|u| [u.name, u.id]}, @team.employee_id), {:prompt => "Select leader"}%> <!--drop down menu to select team_id -->
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
