<%= form_with(model: target) do |form| %>
  <% if target.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(target.errors.count, "error") %> prohibited this target from being saved:</h2>

      <ul>
        <% target.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('Target.index.title'), style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label t('Target.index.description'), style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label t('Target.index.start date'), style: "display: block" %>
    <%= form.text_field :start_date %>
  </div>

  <div>
    <%= form.label t('Target.index.finish date'), style: "display: block" %>
    <%= form.text_field :finish_date %>
  </div>

  <div>
    <%= form.label t('Target.index.team id'), style: "display: block" %>
    <%= form.select :team_id, options_for_select(@teams.map{|u| [u.name, u.id]}, @target.team_id), {:prompt => "Select Role"}%> <!--drop down menu to select team_id -->
  </div>

  <div>
    <%= form.label t('Target.index.status'), style: "display: block" %>
    <%= form.text_field :status %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
