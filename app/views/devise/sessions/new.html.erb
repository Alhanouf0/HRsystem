
<div class="container">
<div class="row mb-3">
<h2><%= t 'User.index.login', default: 'no ', style: "display: block" %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label t('User.index.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('User.index.password') %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label t('User.index.remember me')%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('Home.index.login'), class:"btn btn-primary"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>