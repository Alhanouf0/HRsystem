<div class="row mb-3">
<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
       <%= t "globals.forms.messages.errors.multi errors", count: team.errors.count %>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :job, style: "display: block" %>
    <%= form.text_field :job %>
  </div>

  <div>
    <%= form.label :salary, style: "display: block" %>
    <%= form.text_field :salary %>
  </div>

  <div>
    <%= form.label :employment, style: "display: block" %>
    <%= form.text_field :employment %>
  </div>

  <div>
    <%= form.label :team_id, style: "display: block" %>
    <%= form.select :team_id, options_for_select(@teams.map{|u| [u.name, u.id]}, @employee.team_id), {:prompt => "Select Team"}%> <!--drop down menu to select team_id -->
  </div>

  <div>
    <%= form.submit :submit, class:"btn btn-primary" %>
  </div>
<% end %>
</div>
