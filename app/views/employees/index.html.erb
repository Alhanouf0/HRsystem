
<head>
<style>
.header {
  padding: 10px;
  text-align: center;
  background: rgb(204, 255, 204);
  color: rgb(0, 77, 0);
  font-size: 30px;
}
h1 {text-align: center;}

#employee {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#employee td, #employee th {
  border: 1px solid #ddd;
  padding: 8px;
}

#employee tr:nth-child(even){background-color: #f2f2f2;}

#employee tr:hover {background-color: #ddd;}

#employee th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: rgb(125, 191, 125);
  color: white;
}

div.dep {text-align: center;}

ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: rgb(49, 104, 49);
}


li {float: left;}

.lol {
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;}


.sideUl {background-color: white;}

.sideUl li { display: block;
            text-decoration: none;}

footer {text-align: center;}
</style>
</head>



<div class="header">
<h1><%= t 'Home.index.employees'%></h1>
</div>

<div class="dep">
    <ul>
    <li><button id="openNav" class="w3-button w3-teal w3-xlarge" onclick="w3_open()">&#9776;</button></li>
        <li> <%= link_to t('Home.index.users'), 'users#index', :class => "lol" %>  </li>
        <li> <%= link_to t('Home.index.employees'), employees_path, :class => "lol" %>  </li>
        <li> <%= link_to t('Home.index.teams'), teams_path, :class => "lol" %>  </li>
       <li>  <%= link_to t('Home.index.targets'), targets_path, :class => "lol" %>  </li>
        <li> <%= link_to t('Home.index.divisions'), divisions_path, :class => "lol" %></li>
        
    </ul>
  </div>
<div class="w3-sidebar w3-bar-block w3-card w3-animate-left" style="display:none" id="mySidebar">
  <button class="w3-bar-item w3-button w3-large"
  onclick="w3_close()">Close &times;</button>
  <ul class="sideUl">
  <li><%= link_to "New employee", new_employee_path%></li><br>
  <li><a href="/">homepage</a></li>
  </ul>
</div>


<div id="main">
<table id= "employee">
<tr> <th> <%= link_to t('ُِEmployee.index.name'), :sort => "name" %> </th>
      <th> <%= t 'Employee.index.email' %> </th>
      <th> <%= link_to t('ُِEmployee.index.job'), :sort => "job" %> </th>
      <th> <%= link_to t('ُِEmployee.index.salary'), :sort => "salary" %> </th>
      <th> <%= t 'Employee.index.employment' %>  </th>
      <th> <%= t 'Employee.index.team id' %> </th>
 </tr>
<div>
  <% @employees_sorted.each do |employee| %>
    <%= render employee %>
  <td>
  <p>
      <%= link_to t('Home.index.actions'), employee %>
    </p>
  </td>
    
  <% end %>
</div>
</table>


<footer>
  <p>Copyright @ 2022 - Sprints - author: Alhanouf</p>
</footer>

</div>

<script>
function w3_open() {
  document.getElementById("main").style.marginLeft = "20%";
  document.getElementById("mySidebar").style.width = "20%";
  document.getElementById("mySidebar").style.display = "block";
  document.getElementById("openNav").style.display = 'none';
}
function w3_close() {
  document.getElementById("main").style.marginLeft = "0%";
  document.getElementById("mySidebar").style.display = "none";
  document.getElementById("openNav").style.display = "inline-block";
}
</script>
