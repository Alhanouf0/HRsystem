<div class="row mb-3">

<%= form_with(model: division) do |form| %>
  <% if division.errors.any? %>
    <div style="color: red">
       <%= t "globals.forms.messages.errors.multi errors", count: team.errors.count %>

      <ul>
        <% division.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t('Division.index.name'), style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label t('Division.index.description'), style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  

  <div>
    <%= form.label t('Division.index.manager'), style: "display: block" %>
    <%= form.select :employee_id, options_for_select(@employees.map{|u| [u.name, u.id]}, @division.employee_id), {:prompt => "Select Manager"}%> <!--drop down menu to select team_id -->
  </div>

  <div>
    <%= form.submit :submit, class:"btn btn-primary" %>
  </div>
<% end %>
</div>