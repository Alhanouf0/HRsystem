<h1>Divisions</h1>
<style>
#division {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#division td, #division th {
  border: 1px solid #ddd;
  padding: 8px;
}

#division tr:nth-child(even){background-color: #f2f2f2;}

#division tr:hover {background-color: #ddd;}

#division th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: rgb(139, 60, 166);
  color: white;
}
</style>
</head>

<table id ="division">
<tr><th> Name </th>
    <th> description </th>
    <th> Teams ID </th>
    <th> Manager </th>
</tr>
<div>
  <% @divisions.each do |division| %>
    <%= render division %>
    <td>
      <%= link_to "actions", division %>
    </td>
  <% end %>
</div>
</table>
<%= link_to "New division", new_division_path %>
<a href="/">homepage</a>
